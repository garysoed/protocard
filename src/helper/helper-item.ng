<div layout="row">
  <md-button class="md-icon-button" ng-click="$ctrl.onEditClick()">
    <md-icon>edit</md-icon>
  </md-button>
  <md-button class="md-icon-button" ng-click="$ctrl.onDeleteClick()">
    <md-icon>delete</md-icon>
  </md-button>
  <md-input-container flex>
    <label>Name</label>
    <input
        ng-change="$ctrl.onInputChange()"
        ng-model="$ctrl.name"
        ng-model-options="{ updateOn: 'blur' }"
        type="text">
  </md-input-container>
</div>
